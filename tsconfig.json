{
  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "strict": true,

    // these are because the project sadly started without them, but only for now
    "strictPropertyInitialization": false,
    "strictNullChecks": false,

    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [ "esnext", "dom", "dom.iterable" ],
    "baseUrl": "./src",
    "outDir": "./dist/esm2015"
  },
  "include": [
    "src",
    "test"
  ]
}
